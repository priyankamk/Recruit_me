<div class="jumbotron p-3 p-md-5 text-black rounded bg-light">
  <div class = "col-md-0">
    <div class="card">
      <h3 class="card text-white bg-dark mb-3 text-center">Sign In</h3>
      <div class="card-body">
        <form action="/session" method="post" class="form-signin">
          <div class="form-group col-md-3">
            <input type="radio" name="role" id="role" value="employer">
            <label for="role" class="display-5">Employer</label>
            <input type="radio" name="role" id="role" value="candidate">
            <label for="role">Candidate</label>
          </div>
          <div class="form-group col-md-6">
            <label for="exampleInputEmail1" class="sr-only">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email address" required autofocus>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group col-md-6">
            <label for="exampleInputPassword1" class="sr-only">Password</label>
            <input type="password" name= "password" class="form-control" id="exampleInputPassword1" placeholder="Password" required autofocus>
          </div>
          <div class="col-md-3 text-center">
            <button class="btn btn-primary text-center">Login</button>
          </div>
        </form>
        <div class="row p-4 mb-4">
          <div class="card flex-md-row mb-4 p-2 shadow-sm h-md-250">
            <img class="bd-img card-img-right flex-auto d-none d-lg-block" width="1000x" height="500x" src="https://images.unsplash.com/photo-1468421870903-4df1664ac249?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" preserveAspectRatio="xMidYMid slice" focusable="true" role="img">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
